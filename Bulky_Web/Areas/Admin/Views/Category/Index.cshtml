@model List<Category>;

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="clo-12 text-center">
                <h2 class="text-white py-2">List Category </h2>
            </div>

        </div>

    </div>
    <div class="card-body p-4">
      
            <div class="row pb-1">
                <div class="col-6">
                   
                </div>
                <div class="col-6 text-end">
                    <a asp-action="Add" asp-controller="Category" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>Add Category
                    </a>
                </div>
            </div>
            <div class="row pt-4">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Category Name
                            </th>
                            <th>
                                DisplayOrder
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var obj in Model)
                    {
                        <tr>

                            <td>
                                @obj.Name
                            </td>
                            <td>
                                @obj.DisplayOrder
                            </td>
                            <td>
                                <div class="w-75 btn-group " role="group">
                                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i>Edit
                                    </a>
                                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash"></i>Delete
                                    </a>

                                </div>
                            </td>
                        </tr>


                    }
                </table>
            </div>
        
    </div>
</div>
    
