@{
}
@model List<Product>;

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="clo-12 text-center">
                <h2 class="text-white py-2">List Category </h2>
            </div>

        </div>

    </div>
    <div class="card-body p-4">

        <div class="row pb-0">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-action="UpSert" asp-controller="Product" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>Add Product
                </a>
            </div>
        </div>
        <div class="row pt-4">
            <<table id="tblData" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>

        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/Product.js"></script>
    <script>console.log("✅ Product.js Loaded");</script>
}

